<div class="md:flex items-start gap-0">
  <!-- Sidebar -->
  <div class="md:w-[320px] w-full bg-white p-6 shadow-md h-screen">
    <%= render "shared/logo" %>
    <%= render "filters" %>
    <% if user_signed_in? %>
      <%= render "wishlists/wishlist_sidebar" %>
    <% end %>
    <%= render "shared/links" %>
  </div>

  <!-- Main Content -->
  <div class="md:flex-1 overflow-y-auto h-screen">
    <%= turbo_frame_tag "properties", loading: :lazy do %>
      <%= render "properties", properties: @properties %>
    <% end %>
  </div>
</div>
