<div class="my-6">
  <% if user_signed_in? %>
    <p class="my-2 text-sm">Signed in as <%= current_user.email %></p>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "underline text-indigo-500 hover:text-indigo-600 font-medium" %>
  <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "underline text-indigo-500 hover:text-indigo-600 font-medium" %>
  <% end %>
</div>
