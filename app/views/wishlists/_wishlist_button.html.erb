<% if user_signed_in? %>
  <% if current_user.properties.include?(property) %>
    <%= button_to wishlist_path(property.id), method: :delete, class: "rounded-md size-10 bg-black/50 hover:bg-black/50 flex items-center justify-center transition ease-in-out duration-200 relative -top-1 -right-1" do %>
      <span class="sr-only">Remove from Wishlist</span>
      <%= inline_svg_tag "heart-solid.svg", class: "size-6 fill-current text-red-600", title: "Remove from wishlist" %>
    <% end %>
  <% else %>
    <%= button_to wishlists_path(property_id: property.id), class: "rounded-md size-10 hover:bg-black/50 flex items-center justify-center transition ease-in-out duration-200 relative -top-1 -right-1" do %>
      <span class="sr-only">Add to Wishlist</span>
      <%= inline_svg_tag "heart-outline.svg", class: "size-6 stroke-current text-white", title: "Add to wishlist" %>
    <% end %>
  <% end %>
<% end %>
